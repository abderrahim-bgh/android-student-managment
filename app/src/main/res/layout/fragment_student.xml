<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".studentFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="45dp"
            android:id="@+id/tab_su"
            android:background="#E8FDFFB6"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="num"
                android:id="@+id/num_s"
                android:layout_gravity="center"

                android:gravity="center"
                android:textSize="19dp"
                android:textColor="#1B33BA"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="mat"
                android:id="@+id/mat_s"
                android:layout_gravity="center"

                android:gravity="center"
                android:textSize="19dp"
                android:textColor="#1B33BA"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="L name"
                android:id="@+id/noms"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="19dp"
                android:textColor="#1B33BA"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="F name"
                android:layout_gravity="center"
                android:id="@+id/prenoms"
                android:gravity="center"
                android:textSize="19dp"
                android:textColor="#1B33BA"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Pr"
                    android:id="@+id/prs"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="19dp"
                    android:textColor="#1B33BA"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Ab"
                    android:id="@+id/abs"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="19dp"
                    android:textColor="#1B33BA"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Ju"
                    android:layout_gravity="center"
                    android:id="@+id/jus"
                    android:gravity="center"
                    android:textSize="19dp"
                    android:textColor="#1B33BA"/>
            </LinearLayout>
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/stu_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tab_su"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:nestedScrollingEnabled="true" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:id="@+id/add_student"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:backgroundTint="#F2FEE440"
        android:src="@drawable/ic_baseline_add_24"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        />
    </RelativeLayout>
