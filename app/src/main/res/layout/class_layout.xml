<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/year_layout"
    android:layout_width="match_parent"
    android:layout_height="69dp"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="#E8FDFFB6"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"

    >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="4dp"
            >
    <LinearLayout
        android:id="@+id/nmbr_mat_lay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
            <TextView

                android:id="@+id/class_name_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_height="match_parent"
                android:text="class 01"
                android:textColor="#6D7CCF"
                android:textSize="20sp"
                android:gravity="bottom|center_horizontal"
                android:textStyle="bold"
                />
             <ImageView
                 android:id="@+id/edt_del"
                 android:layout_marginBottom="8dp"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:src="@drawable/ic_baseline_more_vert_24"
                 android:layout_gravity="right|top"/>

    </LinearLayout>
            <TextView
                android:id="@+id/class_year_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2021/2022"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="8dp"
                android:textColor="#6D7CCF"
                android:textSize="14sp"
                android:gravity="right"
                />

        </LinearLayout>






</androidx.cardview.widget.CardView>